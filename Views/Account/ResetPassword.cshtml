@model ResetPasswordViewModel

<head>
	<link rel="stylesheet" href="~/css/site.css" />
</head>

<h1 class="text-info">Reset Password</h1>
<form asp-controller="Account" asp-action="ResetPassword" method="post" role="form">
	<h4>Reset your password</h4>
	<hr />
	<div asp-validation-summary="All" class="text-danger"></div>
	<input asp-for="Code" hidden/>
	<input asp-for="UserId" hidden/>
	<div class="form-group row">
		<label asp-for="Password" class="col-md-2 mt-3"></label>
		<div class="col-md-10">
			<input asp-for="Password" class="form-control" />
			<span asp-validation-for="Password" class="text-danger"></span>
		</div>
		<label asp-for="ConfirmPassword" class="col-md-2 mt-3"></label>
		<div class="col-md-10">
			<input asp-for="ConfirmPassword" class="form-control" />
			<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
		</div>
	</div>

	<div class="form-group mt-2">
		<div class="col-md-2">
			<button type="submit" class="btn btn-primary form-control">Reset</button>
		</div>
	</div>
</form>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}