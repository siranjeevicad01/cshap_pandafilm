@model RegisterViewModel

<head>
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<section class="register_section">
    <div class="container">
        <div class="row">
            <form asp-controller="Account" asp-action="Register" method="post" role="form" class="formed">
                <h2>Create a new account</h2>
                <div class="row">
                    <div class="form-group mt-3">
                        <label asp-for="Email" class="col-md-2"></label>
                        <div class="col-md-10">
                            <input asp-for="Email" class="form-control" placeholder="Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group col-md-6 mt-3">
                        <label asp-for="FirstName" class="col-md-2"></label>
                        <div class="col-md-10">
                            <input asp-for="FirstName" class="form-control" placeholder="Your firstname" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group col-md-6 mt-3">
                        <label asp-for="LastName" class="col-md-2"></label>
                        <div class="col-md-10">
                            <input asp-for="LastName" class="form-control" placeholder="Your lastname" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <label asp-for="Password" class="col-md-2"></label>
                        <div class="col-md-10">
                            <input asp-for="Password" class="form-control" placeholder="Password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <label asp-for="ConfirmPassword" class="col-md-2"></label>
                        <div class="col-md-10">
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Confrim password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mt-3">
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-success form-control">Register</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}